{
  "properties": {
    "displayName": "Enable Azure Defender for All Azure Resources",
    "policyType": "Custom",
    "mode": "All",
    "description": "For enhanced security, enable Azure Defender for all resource types.",
    "metadata": {
      "version": "1.0.0",
      "category": "Security Center"
    },
    "policyRule": {
      "if": {
        "equals": "Microsoft.Security/pricings",
        "field": "type"
      },
      "then": {
        "details": {
          "deployment": {
            "location": "westeurope",
            "properties": {
              "mode": "incremental",
              "parameters": {},
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "outputs": {},
                "parameters": {},
                "resources": [
                  {
                    "apiVersion": "2018-06-01",
                    "name": "VirtualMachines",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "SqlServers",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "AppServices",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "StorageAccounts",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "SqlServerVirtualMachines",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "Containers",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "KeyVaults",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "Dns",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "Arm",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  },
                  {
                    "apiVersion": "2018-06-01",
                    "name": "OpenSourceRelationalDatabases",
                    "properties": {
                      "pricingTier": "Standard"
                    },
                    "type": "Microsoft.Security/pricings"
                  }
                ],
                "variables": {}
              }
            }
          },
          "deploymentScope": "subscription",
          "existenceCondition": {
            "anyOf": [
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "VirtualMachines",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "SqlServers",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "AppServices",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "StorageAccounts",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "SqlServerVirtualMachines",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "KubernetesService",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "ContainerRegistry",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "KeyVaults",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "Dns",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "Arm",
                    "field": "name"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "equals": "Standard",
                    "field": "Microsoft.Security/pricings/pricingTier"
                  },
                  {
                    "equals": "OpenSourceRelationalDatabases",
                    "field": "name"
                  }
                ]
              }
            ]
          },
          "existenceScope": "subscription",
          "name": "[field('name')]",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
          ],
          "type": "Microsoft.Security/pricings"
        },
        "effect": "deployIfNotExists"
      }
    }
  }
}